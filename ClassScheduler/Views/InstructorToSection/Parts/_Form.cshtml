@model ClassScheduler.Models.InstructorToSection

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Instructor" class="control-label"></label>
    <select asp-for="InstructorID" class="form-control chosen-select" asp-items="ViewBag.InstructorID"></select>
    <span asp-validation-for="InstructorID" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Section" class="control-label"></label>
    <select asp-for="SectionID" class="form-control chosen-select" asp-items="ViewBag.SectionID"></select>
    <span asp-validation-for="SectionID" class="text-danger"></span>
</div>
<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="IsPrimary" /> @Html.DisplayNameFor(model => model.IsPrimary)
        </label>
    </div>
</div>
<div class="form-group">
    <label asp-for="TeachingPercentage" class="control-label"></label>
    <input type="number" min="0" max="100" asp-for="TeachingPercentage" class="form-control" />
    <span asp-validation-for="TeachingPercentage" class="text-danger"></span>
</div>