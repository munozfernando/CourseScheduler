@model ClassScheduler.Models.Building

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Abbreviation" class="control-label"></label>
    <input asp-for="Abbreviation" class="form-control" />
    <span asp-validation-for="Abbreviation" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CampusID" class="control-label"></label>
    <select asp-for="CampusID" class="form-control chosen-select" asp-items="ViewBag.CampusID"></select>
</div>
