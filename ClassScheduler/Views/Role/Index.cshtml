@model IEnumerable<ClassScheduler.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h2>User Roles</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buildings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sections)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spreadsheets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campuses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr class="trEditableRow">
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="tdEditorLink"></a>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(model => item.Buildings)
            </td>
            <td>
                @Html.DisplayFor(model => item.Courses)
            </td>
            <td>
                @Html.DisplayFor(model => item.Sections)
            </td>
            <td>
                @Html.DisplayFor(model => item.Roles)
            </td>
            <td>
                @Html.DisplayFor(model => item.Instructors)
            </td>
            <td>
                @Html.DisplayFor(model => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(model => item.ScheduleTypes)
            </td>
            <td>
                @Html.DisplayFor(model => item.Spreadsheets)
            </td>
            <td>
                @Html.DisplayFor(model => item.Departments)
            </td>
            <td>
                @Html.DisplayFor(model => item.Users)
            </td>
            <td>
                @Html.DisplayFor(model => item.Campuses)
            </td>
            <td>
                @Html.DisplayFor(model => item.Days)
            </td>
        </tr>
        }
    </tbody>
</table>
